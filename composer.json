{
  "name":              "yuslf/jaeger-php",
  "description":       "php client for jaeger",
  "keywords":          ["jaeger","trace","opentracing"],
  "license":           "MIT",
  "minimum-stability": "dev",
  "require":           {
    "php": ">=5.6.0",
    "packaged/thrift" : "0.10.0",
    "opentracing/opentracing" : "1.0.0-beta2"
  },
  "authors": [
    {
      "name": "yuslf",
      "email": "angelo@263.net"
    }
  ],
  "autoload":          {
    "psr-4": {
      "Jaeger\\": "src\\Jaeger"
    },
    "files": [
      "src/Jaeger/Constants.php"
    ]
  },
  "scripts": {
    "pre-install-cmd": "Jaeger\\Script\\EventHandler::test",
    "post-install-cmd": "Jaeger\\Script\\EventHandler::test",
    "pre-update-cmd": "Jaeger\\Script\\EventHandler::test",
    "post-update-cmd": "Jaeger\\Script\\EventHandler::test",
    "post-status-cmd": "Jaeger\\Script\\EventHandler::test",
    "pre-archive-cmd": "Jaeger\\Script\\EventHandler::test",
    "post-archive-cmd": "Jaeger\\Script\\EventHandler::test",
    "pre-autoload-dump": "Jaeger\\Script\\EventHandler::test",
    "post-autoload-dump": "Jaeger\\Script\\EventHandler::test",
    "post-root-package-install": "Jaeger\\Script\\EventHandler::test",
    "post-create-project-cmd": "Jaeger\\Script\\EventHandler::test",

    "pre-package-install": "Jaeger\\Script\\EventHandler::postPackageInstall",
    "post-package-install": "Jaeger\\Script\\EventHandler::postPackageInstall",
    "pre-package-update": "Jaeger\\Script\\EventHandler::postPackageInstall",
    "post-package-update": "Jaeger\\Script\\EventHandler::postPackageInstall",
    "pre-package-uninstall": "Jaeger\\Script\\EventHandler::postPackageInstall",
    "post-package-uninstall": "Jaeger\\Script\\EventHandler::postPackageInstall"

  }
}
